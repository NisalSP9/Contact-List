<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.example.cis.contaclist">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data android:name="android.app.searchable"

                android:resource="@xml/searchable"



                />


        </activity>
        <activity
            android:name=".view.ViewContactList"
            android:screenOrientation="portrait"

            />
        <activity
            android:name=".view.AddNewContact"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.ContactDetail"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.UpdateContact"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.MessageSender"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.MailSender"
            android:screenOrientation="portrait"
            ></activity>
    </application>

</manifest>